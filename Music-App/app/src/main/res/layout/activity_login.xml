<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A1A20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_above="@id/input_group">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/hinhlogo1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="49dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/edUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_top"
                android:textColorHint="#807878"
                android:textColor="#000000"
                android:hint="Email"
                android:inputType="textPersonName"
                android:padding="15dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:textColor="#000000"
                android:textColorHint="#807878"
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bottom"
                android:hint="Mật khẩu"
                android:padding="15dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Đăng Nhập"
            android:textAllCaps="false"
            android:textColor="#009688"
            android:backgroundTint="#E8E8E6"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tvForgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="Quên Mật Khẩu ?"
            android:textAllCaps="true"
            android:textColor="#009688"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btnfacebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#416BC1"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="Đăng Nhập Với FaceBook"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btngmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Đăng Nhập Với Google"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="Chưa có tài khoàn ? Đăng ký tại đây"
            android:textAllCaps="true"
            android:textColor="#009688"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>